%div{class: "grid-cols-1 row-span-1 py-8 px-8 rounded-xl space-y-2 sm:py-4 sm:flex sm:items-center sm:space-y-0 sm:space-x-6"}
  = link_to current_user do
    = image_tag 'default_user_avatar', alt: current_user.name, class: "block mx-auto h-16 rounded-full sm:mx-0 sm:shrink-0"
  %div{class: "flex-1 min-w-0"}
    %p{class: "text-sm text-medium font-bold text-gray-900 truncate dark:text-white"}
      = current_user.name
    %p{class: "text-sm font-medium text-gray-900 truncate dark:text-white"}
      = link_to "View profile", current_user, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline"
    %p{class: "text-sm text-gray-500 truncate dark:text-gray-400"}
      = pluralize(current_user.microposts.count, "micropost")
