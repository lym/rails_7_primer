- provide(:title, 'Register')

%div{class: "py-12"}
  %h2{class: "font-bold text-4xl"} Signup
  %div{class: "mt-8 max-w-md"}
    %div{class: "grip grid-cols-1 gap-6"}
      = form_with(model: @user) do |f|
        = render "shared/error_messages"
        = f.label :name, class: "block" do
          %span{class: "text-gray-700"} Name
        = f.text_field :name,
          class: "mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0",
          placeholder: ""

        = f.label :email, class: "block" do
          %span{class: "text-gray-700"} Email
        = f.email_field :email,
            class: "mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0",
            placeholder: "you@example.com"

        = f.label :password, class: "block" do
          %span{class: "text-gray-700"} Password
        = f.password_field :password,
            class: "mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0",
            placeholder: ""

        = f.label :password_confirmation, class: "block" do
          %span{class: "text-gray-700"} Password Confirmation
        = f.password_field :password_confirmation,
            class: "mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0",
            placeholder: ""
        = f.submit 'Create Account',
          class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
/ class: "mt-1  mx-auto lg:mx-0 hover:bg-blue-200 bg-blue-500 text-gray-800 font-bold rounded my-6 py-4 px-8 shadow-lg"
